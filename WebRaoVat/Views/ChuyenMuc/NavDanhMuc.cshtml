@model IEnumerable<WebRaoVat.Models.DanhMuc>

<style>
    * {
        padding: 0;
        margin: 0;
    }

    #div-u {
        background-color: white;
        text-decoration: none;
    }

    .div-cate {
        padding: 10px;
        line-height: 60px;
        border: 1px solid #E5ECF4;
        width: 100%;
    }

    .div-cate:hover {
        background-color: #38A4F5;
    }

    a {
        color: black;
        text-decoration: none;
        font-size: 1.1em;
    }

        a:hover {
            text-decoration: none;
            color: white;
        }
</style>
<ul style="list-style-type:none" id="div-u">
    @{
        foreach (var item in Model)
        {
            <li class="div-cate">
                <a href="@Url.Action("DSBaiDang", "ChuyenMuc",new { maDanhMuc = item.maDanhMuc,maChuyenMuc=item.maChuyenMuc })"><i class="bi bi-star"></i> @item.tenDanhMuc (@item.soLuongBai)</a>
            </li>
        }
    }
</ul>
