@model IEnumerable<WebRaoVat.Models.NguoiDung>

@{
    ViewBag.Title = "QuanLyNguoiDung";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý người dùng</h2>

<button class="btn btn-primary" onclick="location.href='@Url.Action("ThemNguoiDung", "Admin")'">Thêm tài khoản</button>
<br />
<br />
<table class="table table-hover">
    <tr>
        <th>
            Mã người dùng
        </th>
        <th>
            Họ tên
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Email
        </th>
        <th>
            Username
        </th>
        <th>
            Tên quyền
        </th>
        <th>
            Chức năng
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.maNguoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quyen.tenQuyen)
            </td>
            <td>
                <i class="bi bi-arrow-90deg-right" onclick="location.href='@Url.Action("ChiTietThongTinNguoiDung", "Admin", new { maNguoiDung = item.maNguoiDung })'" style="cursor:pointer; color:blue" title="chi tiết"></i> |
                <i class="bi bi-pencil-square" onclick="location.href='@Url.Action("SuaThongTinNguoiDung", "Admin", new { maNguoiDung = item.maNguoiDung })'" style="cursor:pointer; color:green" title="sửa"></i> 
            </td>
        </tr>
    }

</table>
