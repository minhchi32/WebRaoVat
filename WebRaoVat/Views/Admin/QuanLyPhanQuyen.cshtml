@model IEnumerable<WebRaoVat.Models.Quyen>

@{
    ViewBag.Title = "QuanLyPhanQuyen";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý phân quyền</h2>

<button class="btn btn-primary" onclick="location.href='@Url.Action("ThemPhanQuyen", "Admin")'">Thêm quyền</button>
<br />
<br />
<table class="table table-hover">
    <tr>
        <th>
            Mã quyền
        </th>
        <th>
            Tên quyền
        </th>
        <th>
            Chức năng
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.maQuyen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tenQuyen)
            </td>
            <td>
                <i class="bi bi-pencil-square" onclick="location.href='@Url.Action("SuaPhanQuyen", "Admin", new { maQuyen = item.maQuyen })'" style="cursor:pointer; color:green" title="sửa"></i> |
                <i class="bi bi-trash" onclick="location.href='@Url.Action("XoaPhanQuyen", "Admin", new { maQuyen = item.maQuyen })'" style="cursor:pointer; color:red" title="xóa"></i>
            </td>
        </tr>
    }

</table>
